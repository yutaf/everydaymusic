<%= form_for(@user, url: account_path) do |f| %>
    <!--TODO Internationalize error messages -->
    <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |msg| %>
            <p class="notice"><%= msg %></p>
        <% end %>
    <% end %>
    <div class="item columns">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
    <div class="item rows">
      <%= f.check_box :is_active, {checked: @is_active_checked}, 0, 1 %>
      <%= f.label :is_active, (t 'account.stop_service'), {class: :checkbox} %>
    </div>
    <div class="item buttons">
      <%= f.submit (t 'save'), class: :btn %>
      <%= link_to (t 'back'), account_path, class: :btn %>
    </div>
<% end %>